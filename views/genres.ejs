<% layout('layout') %>

<div>
  <div class="d-flex my-3 align-items-center">
    <h5 class="mb-0">
      <% if (categoryId === '1') { %> Movie Genres <% } else { %> TV Show Genres
      <% } %>
    </h5>
    <div class="ms-auto">
      <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item">
          <a href="/categories">Back</a>
        </li>
        <li class="breadcrumb-item">
          <a href="/categories/<%= categoryId %>/genres/create">Create genre</a>
        </li>
      </ol>
    </div>
  </div>

  <% if (genres.length === 0) { %>
  <div class="alert alert-info">
    No genres available in this category.
    <a href="/categories/<%= categoryId %>/genres/create">Create a new genre</a
    >.
  </div>
  <% } else { %>
  <div class="row g-3">
    <% genres.forEach(genre => { %>
    <div class="col col-md-4">
      <div class="card shadow-sm">
        <div class="card-body">
          <a
            href="/categories/<%= genre.category_id %>/genres/<%= genre.id %>/items"
          >
            <h6 class="card-title"><%= genre.name %></h6>
          </a>
        </div>
      </div>
    </div>
    <% }); %>
  </div>
  <% } %>
</div>
