<% layout('layout') %>

<div>
  <div class="d-flex my-1 align-items-center">
    <h5><%= title %></h5>
    <div class="ms-auto">
      <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item">
          <a href="/categories/<%= categoryId %>/genres">Back</a>
        </li>
        <li class="breadcrumb-item">
          <a href="/categories/<%= categoryId %>/genres/<%= genreId %>/update"
            >Update genre</a
          >
        </li>
        <li class="breadcrumb-item">
          <a
            href="/categories/<%= categoryId %>/genres/<%= genreId %>/items/create"
            >Create <%= categoryId == 1 ? 'movie' : 'tv show' %></a
          >
        </li>
      </ol>
    </div>
  </div>
  <div>
    <% if (items.length > 0) { %>
    <ul>
      <% items.forEach(item => { %>
      <li>
        <h6 class="mb-0">
          <a
            href="/categories/<%= categoryId %>/genres/<%= genreId %>/items/<%= item.id %>"
            ><%- item.name %></a
          >
        </h6>
        Description: <%- item.description %><br />
        Likes: <%= item.likes %><br />
      </li>
      <% }) %>
    </ul>
    <% } else { %>
    <p>
      No <%= categoryId == 1 ? 'movies' : 'tv shows' %> found for this genre.
    </p>
    <% } %>
  </div>
</div>
