<% layout('layout') %>

<div class="container mt-4">
  <h3>Delete <%= categoryId == 1 ? 'movie' : 'tv show' %></h3>
  <div class="alert alert-danger">
    <p>
      Are you sure you want to delete this <%= categoryId == 1 ? 'movie' : 'tv show' %>?
    </p>
    <p>This action cannot be undone.</p>
  </div>
  <form
    action="/categories/<%= categoryId %>/genres/<%= genreId %>/items/<%= itemId %>/delete"
    method="post"
  >
    <div class="d-flex">
      <a
        class="btn btn-secondary me-2"
        href="/categories/<%= categoryId %>/genres/<%= genreId %>/items/<%= itemId %>"
        >Cancel</a
      >
      <button class="btn btn-danger" type="submit">Delete</button>
    </div>
  </form>
</div>
